{% extends 'base.html.twig' %}

{% block title %}Available Destination{% endblock %}

{% block body %}


<div class="row">

     <div class="d-flex gap-2">
        <h1 class="mb-2">Foo-Trip ! âœ…</h1>
        <h6><a href= {{ path('app_logout') }}>Logout</a></h6>
    </div>
    <span><a class="mt-3 btn btn-primary btn-sm" href ={{ path ('admin.create') }}>create new destination</a><span>


    <table class="table table-striped mt-3 col-md-12">
        <thead>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Duration</th>
            <th>Action</th>
        <thead>
        <tbody>
            {% for destination in destinations %}
            <tr>
                <td>{{ destination.name }}</td>
                <td>{{ destination.description }}</td>
                <td>{{ destination.price }}</td>
                <td>{{ destination.duration }}</td>
                <td>
                    <div class="d-flex gap-1">
                    <a class="mt-3 btn btn-success btn-sm" href ={{ path ('admin.edit', {'id': destination.id }) }}>edit</a>
                    <form action = "{{ path ('admin.delete', {'id': destination.id }) }}" method = "post">
                    <input type="hidden" name="_method" value="DELETE"/>
                    <button type="submit" class="mt-3 btn btn-warning btn-sm">delete</button></form>
                    </div>
                </td>

            </tr>
            {% endfor %}
        </tbody>

    <table>
</div>
{% endblock %}
